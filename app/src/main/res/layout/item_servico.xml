<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="20dp"
	android:background="#292929"
	tools:context=".PaginaUsuario">

	<com.makeramen.roundedimageview.RoundedImageView
		android:id="@+id/imageUseNav"
		android:layout_width="110dp"
		android:layout_height="152dp"
		android:layout_marginStart="24dp"
		android:layout_marginLeft="24dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="300dp"
		android:layout_marginRight="300dp"
		android:layout_marginBottom="16dp"
		android:contentDescription="@string/app_name"
		android:scaleType="centerCrop"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:riv_corner_radius="6dp" />

	<TextView
		android:id="@+id/tituloServico"
		android:layout_width="256dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="50dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:layout_marginBottom="22dp"
		android:paddingTop="15dp"
		android:textColor="@color/colorTextPrimary"
		android:textSize="16sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/estrelas"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageUseNav"
		app:layout_constraintTop_toTopOf="parent" />

	<RatingBar
		android:id="@+id/estrelas"
		style="@style/Widget.AppCompat.RatingBar.Small"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="22dp"
		android:layout_marginEnd="181dp"
		android:layout_marginRight="181dp"
		android:layout_marginBottom="7dp"
		android:isIndicator="true"
		android:numStars="5"
		android:theme="@style/RatingBar"
		app:layout_constraintBottom_toTopOf="@+id/nomeServico"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageUseNav"
		app:layout_constraintTop_toBottomOf="@+id/tituloServico" />

	<TextView
		android:id="@+id/nomeServico"
		android:layout_width="257dp"
		android:layout_height="23dp"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="7dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:layout_marginBottom="2dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@color/colorTextSecondary"
		android:textSize="15sp"
		app:layout_constraintBottom_toTopOf="@+id/tipoServico"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageUseNav"
		app:layout_constraintTop_toBottomOf="@+id/estrelas" />

	<TextView
		android:id="@+id/tipoServico"
		android:layout_width="256dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="2dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:layout_marginBottom="9dp"
		android:ellipsize="end"
		android:maxLines="2"
		android:textColor="@color/colorTextSecondary"
		android:textSize="13sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageUseNav"
		app:layout_constraintTop_toBottomOf="@+id/nomeServico" />

	<Switch
		android:id="@+id/btnFavItem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="227dp"
		android:layout_marginLeft="227dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="4dp"
		android:layout_marginRight="4dp"
		android:layout_marginBottom="7dp"
		app:layout_constraintBottom_toTopOf="@+id/tituloServico"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageUseNav"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="7dp"
		android:text="⭐"
		app:layout_constraintBottom_toTopOf="@+id/tituloServico"
		app:layout_constraintEnd_toStartOf="@+id/btnFavItem"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
